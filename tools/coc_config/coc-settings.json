{
	"coc.preferences.rootPatterns": [
		".git",
		".svn",
		".root",
		".project",
		".hg",
		".projections.json"
	],
	"diagnostic.enable": true,
	"diagnostic.displayByAle": false,
      "diagnostic.messageTarget": "float",
      "diagnostic.virtualText": false,
      "diagnostic.showUnused": true,
      "diagnostic.enableSign": true,
      "diagnostic.autoRefresh": true,
      "diagnostic.checkCurrentLine": true,
		  "coc.source.around.firstMatch": false,
			"coc.source.buffer.firstMatch": false,
			"hover.target": "float",
"languageserver": {
      "ccls": {
            "command": "ccls",
            "filetypes": ["c", "cpp", "ipp", "cuda","ic","objc", "objcpp"],
            "rootPatterns": ["compile_commands.json", ".ccls",".git",".svn"],
            "initializationOptions": {
                    "cache": {
											"directory":".tmp/ccls_cache/",
                               "retainInMemory": 1,
															 "format":"json",
															 "hierarchicalPath":false
                            },
                    "clang":{
													"pathMappings":[]
										},
                    "index":{
                      "trackDependency":1,
                              "threads": 0
                            },
                    "completion": {
                              "caseSensitivity": 2,
                              "detailedLabel":true,
                              "filterAndSort":true
                            },
                    "highlight": {
                              "lsRanges" : true
                            },
						"client" : {
											"snippetSupport":true
										}
                  }
          }
    },
  "clangd.enabled": false,
  "clangd.arguments": [ "--all-scopes-completion","--completion-style=detailed","--function-arg-placeholders","--header-insertion=iwyu","--pch-storage=disk","--background-index","--cross-file-rename","-j=8" ],
  "clangd.showDBChangedNotification": true,
	"clangd.semanticHighlighting": true,
	"coc.preferences.colorSupport": true,
	"coc.preferences.floatActions": true,
	"coc.preferences.currentFunctionSymbolAutoUpdate": true,
	"coc.source.file.ignoreHidden": false,
  "coc.preferences.formatOnType": true,
	"suggest.completionItemKindLabels": {
			"keyword": "\uf1de",
			"variable": "\ue79b",
			"value": "\uf89f",
			"operator": "\u03a8",
			"function": "\u0192",
			"reference": "\ufa46",
			"constant": "\uf8fe",
			"method": "\uf09a",
			"struct": "\ufb44",
			"class": "\uf0e8",
			"interface": "\uf417",
			"text": "\ue612",
			"enum": "\uf435",
			"enumMember": "\uf02b",
			"module": "\uf40d",
			"color": "\ue22b",
			"property": "\ue624",
			"field": "\uf9be",
			"unit": "\uf475",
			"event": "\ufacd",
			"file": "\uf723",
			"folder": "\uf114",
			"snippet": "\ue60b",
			"typeParameter": "\uf728",
			"default": "\uf29c"
	},
	"suggest.floatEnable": true,
	"explorer.position": "floating" ,
	"explorer.file.showHiddenFiles": true,
  "git.addGBlameToBufferVar": false,
  "git.addGBlameToVirtualText": true
}
